<h1>index list</h1>
<div class="row mt-5 text-white">
    <% @lists.each do |list| %>
      <div class="col-4 mt-2 mb-2">
      <%= link_to list_path(list), class:'text-white' do%>
        <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.photo.attached? ? cl_image_path(list.photo.key, height: 300, width: 400, crop: :fill) : 'https://cdn.pixabay.com/photo/2016/01/22/08/20/film-1155439_960_720.jpg' %>')">
          <%= list.name %>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
  <%= link_to '+ NEW LIST', new_list_path, class:'mt-5 form-actions btn btn-primary' %>
</div>

<%= link_to "New", new_list_path, class: 'btn btn-danger' %>
